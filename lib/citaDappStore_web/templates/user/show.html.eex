<ul>
  <li>
    <strong>Name:</strong>
    <%= @user.username %>
  </li>

  <li>
    <strong>Address:</strong>
    <%= @user.addr %>
  </li>
  <li>
    <strong>Avatar:</strong>
    <%= img_tag @user.avatar, alt: "avatar", class: "user-avatar" %>
  </li>
</ul>

<span><%= link "Edit", to: user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: user_path(@conn, :index) %></span>
